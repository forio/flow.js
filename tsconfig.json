{
    "compilerOptions": {
        "baseUrl": "./src/",
        "noEmit": true,
        "allowJs": true,
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "suppressExcessPropertyErrors": true,
        "moduleResolution": "node"
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}